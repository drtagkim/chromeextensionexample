{
    "name":"download listener",
    "description":"download listener",
    "version":"0.1",
    "manifest_version":2,
    "background":{
        "scripts":["background.js"],
        "persistent":false
    },
    "permissions":[
        "http://*/",
        "https://*/",
        "storage",
        "activeTab",
        "downloads"
    ],
    "content_security_policy":"script-src 'self'; default-src 'self'"
}